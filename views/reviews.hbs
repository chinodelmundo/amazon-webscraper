<div class="main-content">
	{{#if message}}
        <div class="error-message">
		  {{message}}
	    </div>
    {{/if}}
	<div class="product-details">
        <div class="row">
            <div class="col-md-8 col-md-offset-1">
                <table class="table">
                    <tbody>
                        <tr>
                            <td class="row-identifier">Product Name:</td>
                            <td>{{product.name}}</td>
                        </tr>
                        <tr>
                            <td class="row-identifier">Price:</td>
                            <td>{{product.price}}</td>
                        </tr>
                        <tr>
                            <td class="row-identifier">Rating:</td>
                            <td>{{product.rating}}</td>
                        </tr>
                        <tr>
                            <td></td>
                            <td>
                                <a href="{{results.link}}">Link</a>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
	</div>

	<div class="results-container">
        <div class="row">
            <div class="col-md-10 col-md-offset-1">
                <div class="reviews-found">
                    Reviews Found: {{results.reviews.length}}
                </div>
                <div class="panel panel-default">
                    <div class="panel-body">  
                        <table class="table table-hover table-bordered" id="results-table" width="100%">
                            <thead>    
                                <tr>
                                    <th>Reviewer</th>
                                    <th>Review</th>
                                    <th>Rating</th>
                                    <th>Date</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each results.reviews as |review|}}
                                    <tr>
                                        <td>{{review.author}}</td>
                                        <td>{{review.text}}</td>
                                        <td>{{review.rating}}</td>
                                        <td>{{review.date}}</td>
                                    </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
	</div>
</div>

<script>
    $('#results-table').DataTable({
        "lengthMenu": [[10, 20, 50, -1],[10, 20, 50, 'All']],
        "bSort": true,
        "aaSorting": []
    });
</script>